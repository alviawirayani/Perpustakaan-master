<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Daftar"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="531dp"
        android:background="@color/tema" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height= "100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/buku" />

                //judul
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="PERPUSTAKAAN MAHASISWA"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="50dp"
                    android:paddingTop="30dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="100dp">

                    //nama
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="45dp"
                        android:background="@drawable/form"
                        android:paddingLeft="15dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    //email
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:height="45dp"
                        android:background="@drawable/form"
                        android:hint=""
                        android:inputType="textEmailAddress"
                        android:paddingLeft="15dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    //nim
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nim"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/nim"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:height="45dp"
                        android:background="@drawable/form"
                        android:inputType="number"
                        android:paddingLeft="15dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    //no telepon
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Telepon"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/no"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:height="45dp"
                        android:background="@drawable/form"
                        android:hint=""
                        android:inputType="number"
                        android:paddingLeft="15dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    //status
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/reguler"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="Reguler"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/paralel"
                        android:layout_width="129dp"
                        android:layout_height="wrap_content"
                        android:text="Paralel"
                        android:textColor="#000000" />

                    //jenis kelamin
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="1dp">

                        <RadioButton
                            android:id="@+id/laki"
                            android:layout_width="132dp"
                            android:layout_height="wrap_content"
                            android:text="Laki-laki"
                            android:textColor="#000000" />

                        <RadioButton
                            android:id="@+id/perempuan"
                            android:layout_width="159dp"
                            android:layout_height="wrap_content"
                            android:text="Perempuan"
                            android:textColor="#000000" />
                    </RadioGroup>

                    //usia
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Usia"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/usia"
                        android:layout_width="298dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:max="35"
                        android:min="18" />

                    //keterangan usia
                    <TextView
                        android:id="@+id/us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/usia"
                        android:layout_marginLeft="110dp"
                        android:text="Tahun"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    //program studi
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Program Studi"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/program"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:backgroundTint="#191919"
                        android:entries="@array/prodi"
                        android:gravity="center_horizontal"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/ps"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textColor="#000000" />

                    //button daftar
                    <Button
                        android:id="@+id/button1"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/button"
                        android:onClick="kirim"
                        android:paddingTop="-30dp"
                        android:text="Daftar"
                        android:textColor="@color/black"
                        app:backgroundTint="#FF9800" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>